    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run NPM Server",
            "request": "launch",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "run",
                "server"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "command": "npm start",
            "name": "Run NPM Start",
            "request": "launch",
            "type": "node-terminal"
        },
    ]
}